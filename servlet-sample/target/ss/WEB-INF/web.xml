<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>EDSA</display-name>
	<description>External data source adaptor</description>

	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>com.inbravo.ss.servlet.EmployeeServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>*.ser</url-pattern>
	</servlet-mapping>

	<!-- Default session timeout is 30 minute -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>